{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Persona Intake Question Bank",
  "type": "object",
  "required": [
    "version",
    "questions"
  ],
  "properties": {
    "version": {
      "type": "string"
    },
    "questions": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/question"
      }
    }
  },
  "definitions": {
    "question": {
      "type": "object",
      "required": [
        "id",
        "prompt",
        "type"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "prompt": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "single",
            "multi",
            "text",
            "scale"
          ]
        },
        "choices": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "id",
              "label"
            ],
            "properties": {
              "id": {
                "type": "string"
              },
              "label": {
                "type": "string"
              }
            }
          }
        },
        "branch": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "Map from answer choice id to next question id"
        }
      },
      "additionalProperties": false
    }
  }
}